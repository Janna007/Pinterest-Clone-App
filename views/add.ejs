<% include ./partials/header.ejs %>
   

   <div class="w-full min-h-screen bg-zinc-800 px-5 md:px-10 py-5 text-white">
      <h1 class="text-xl">Create A New Post</h1>
      <hr class="opacity-10 mt-3">
      <form action="/createpost" method="post" enctype="multipart/form-data">
          <input class="block w-full md:w-1/3 px-3 py-2 mt-3 md:mt-2" type="file" name="postimage">
          <input class="block w-full md:w-1/3 text-black px-3 py-2 border-2 mt-3 md:mt-2 rounded-md" type="text" placeholder="Title" name="title">
          <textarea class="block w-full md:w-1/3 text-black h-40 md:h-60 px-3 py-2 border-2 mt-3 md:mt-2 rounded-md" type="text" placeholder="Description" name="description"></textarea>
          <input class="block w-full md:w-1/3 px-3 py-2 mt-3 md:mt-2 rounded-md bg-red-600" type="submit" value="Create Post">
      </form>
  </div>
  
