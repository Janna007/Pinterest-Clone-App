<% include ./partials/header.ejs %>
   

      <div class="w-full min-h-screen bg-zinc-300 flex items-center justify-center">
         <div class="w-full max-w-lg bg-white px-6 py-10 rounded-lg sm:px-10">
             <h1 class="text-3xl text-center mb-10 font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Create New Account</h1>
             <form action="/register" method="post">
                 <input class="block mt-2 w-full border-2 rounded-md px-3 py-2" type="text" name="username" placeholder="Username">
                 <input class="block mt-2 w-full border-2 rounded-md px-3 py-2" type="text" name="fullname" placeholder="Fullname">
                 <input class="block mt-2 w-full border-2 rounded-md px-3 py-2" type="email" name="email" placeholder="Email">
                 <input class="block mt-2 w-full border-2 rounded-md px-3 py-2" type="tel" name="contact" placeholder="Contact">
                 <input class="block mt-2 w-full border-2 rounded-md px-3 py-2" type="password" name="password" placeholder="Password">
                 
                 <input class="block mt-5 w-full border-2 px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create Account">
                 <p class="text-xs font-semibold text-zinc-700 mt-7 w-full text-center">By continuing, you agree to Pinterest's Terms of Service; and acknowledge that you've read full Privacy Policy. Notice at collection.</p>
             </form>
             <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Already have an account?</a>
         </div>
     </div>
     
   
 <% include ./partials/footer.ejs %>
